<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/listview_middle_margin"
    android:paddingEnd="@dimen/listview_middle_margin">
    
    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/list_entry_pic"
        android:layout_width="@dimen/listview_image_view"
        android:layout_height="@dimen/listview_image_view"
        android:layout_margin="@dimen/listview_small_margin"
        tools:src="@mipmap/ic_launcher"
        />
    
    <TextView
        android:layout_toRightOf="@id/list_entry_pic"
        android:id="@+id/list_entry_name"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_24"
        android:textColor="@color/my_primary_text"
        android:layout_marginTop="@dimen/listview_small_margin"
        tools:text="@string/app_name"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_below="@id/list_entry_name"
        android:layout_toRightOf="@id/list_entry_pic"
        android:id="@+id/list_entry__phone"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_20"
        android:textColor="@color/my_secondary_text"
        tools:text="@string/stub_phone_number"
        android:gravity="center_vertical"
        />

</RelativeLayout>