<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_primary_light">

    <TextView
        android:id="@+id/header_text_sort_by"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/giant_margin"
        android:layout_marginStart="@dimen/giant_margin"
        android:textSize="@dimen/font_20"
        android:fontFamily="sans-serif-condensed"
        android:layout_weight="5"
        tools:text="by First name"
        />

    <TextView
        android:id="@+id/header_text_sort_order"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/listview_middle_margin"
        android:layout_marginEnd="@dimen/listview_middle_margin"
        android:textSize="@dimen/font_20"
        android:fontFamily="sans-serif-condensed"
        android:layout_weight="2"
        tools:text="Asc"
        />

</LinearLayout>